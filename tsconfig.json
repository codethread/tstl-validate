{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "types": ["lua-types/5.1"],
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "plugins": [{ "name": "typescript-tstl-plugin" }]
  },
  "include": ["src/**/*"],
  "tstl": {
    "buildMode": "library",
    "noImplicitSelf": true,
    "luaTarget": "JIT"
  }
}
